@model RegistroRequestDto

<style>
    /* Estilo personalizado para el formulario */
    .my-form {
        max-width: 450px;
        margin: 0 auto
    }
</style>
<form method="post" class="my-form">
    <div class="container border p-3">
        <h1 class="text-white text-center">REGISTRARSE</h1>
        <hr />
       
        <div class="form-group">
            <label class="form-label mt-4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Completar tus datos</font></font></label>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" type="email" id="floatingInput" placeholder="">
                <label for="floatingInput"><font style="vertical-align: inherit;">Email</font></font></label>
                <span asp-validation-for="Email" class="text-danger" />

            </div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" id="floatingInput" placeholder="">
                <label for="floatingInput"><font style="vertical-align: inherit;">Name</font></font></label>
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Celular" class="form-control" id="floatingInput" placeholder="">
                <label for="floatingInput"><font style="vertical-align: inherit;">Celular</font></font></label>
                <span asp-validation-for="Celular" class="text-danger" />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" id="floatingInput" placeholder="">
                <label for="floatingInput"><font style="vertical-align: inherit;">Password</font></font></label>
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <label ><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Rol</font></font></label>
            <div class="form-floating mb-3">
                
                <select asp-for="Rol" class="form-select" id="exampleSelect1" asp-items="@ViewBag.RolList">
                    <option disabled selected>--seleccione--</option>
                </select>
            </div>
            <div class="">
                <div class="col-6 offset-3">
                    <button type="submit" value="Submit" class="btn btn-success form-control">Registrarse</button>
                </div>

            </div>


        </div>

        <div>
        </div>

    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}