@model CuponDto

<style>
    /* Estilo personalizado para el formulario */
    .my-form {
        max-width: 600px; 
        margin: 0 auto
    }
</style>
<form asp-action="CrearCupon" class="my-form">
    <div class="container border p-3">
        <h1 class="text-white text-center">Crear Cupon</h1>
        <hr />
        <div class="form-group">
            <label class="form-label mt-4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Datos del cupon</font></font></label>

            <div class="form-floating mb-3">
                <input asp-for="CodigoCupon" class="form-control" id="floatingInput" placeholder="">
                
                <label for="floatingInput"><font style="vertical-align: inherit;">Codigo de Cupon</font></font></label>
                <span asp-validation-for="CodigoCupon" class="text-danger" />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Descuento" class="form-control" id="floatingInput" placeholder="">
                <label for="floatingInput"><font style="vertical-align: inherit;">Descuento</font></font></label>
                <span asp-validation-for="Descuento" class="text-danger" />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="MinCanti" class="form-control" id="floatingInput" placeholder="">
                <label for="floatingInput"><font style="vertical-align: inherit;">Cantidad Minima</font></font></label>
                <span asp-validation-for="MinCanti" class="text-danger" />
            </div>

            

            <div class="row">
                <div class="col-5 offset-1">
                    <a asp-action="CuponIndex" class="btn-primary btn form-control">Regresar</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Create" class="btn btn-success form-control" />
                </div>
            </div>
            

        </div>

        <div>
        </div>

    </div>
</form>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}